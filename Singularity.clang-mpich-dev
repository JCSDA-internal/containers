BootStrap: docker
From: jcsda/docker-clang-mpich-dev:latest

%labels
MAINTAINER Mark Miesch
SPECIES JEDI

%environment
    DISPLAY=:0.0
    export DISPLAY
    TERM=xterm
    export TERM
    GIT_MERGE_AUTOEDIT=no
    export GIT_MERGE_AUTOEDIT

%post
    echo "Hello from inside the container"
    mkdir -p /var/go

%runscript
    echo "Welcome, this is the Singularity container for JEDI with clang/gfortran and mpich"

